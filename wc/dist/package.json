{
  "name": "juncture-digital",
  "version": "3.3.5",
  "private": false,
  "scripts": {
    "dev": "vite",
    "build": "tailwindcss -i input.css -o tailwind.css && run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build --base=https://cdn.jsdelivr.net/npm/juncture-digital/",
