    "js-yaml": "^4.1.0",
    "jsonld": "^8.3.2",
    "leaflet": "^1.9.4",
    "leaflet-gesture-handling": "^1.2.2",
    "leaflet.control.opacity": "^1.6.0",
    "leaflet.smoothwheelzoom": "github:rsnyder/Leaflet.SmoothWheelZoom",
    "marked": "^7.0.4",
    "marked-footnote": "^1.2.2",
    "mermaid": "^10.9.0",
    "openseadragon": "^5.0.0",
